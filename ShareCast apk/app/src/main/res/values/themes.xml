<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/start_bg_2</item>
    </style>

    <style name="Theme.Cast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cast.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cast.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BigTitle">
        <item name="android:layout_marginTop">@dimen/margin_super_small</item>
        <item name="android:layout_marginStart">@dimen/margin_super_small</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_size_super_big</item>
    </style>

    <style name="MiddleTitle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_micro</item>
    </style>

    <style name="RippleBtnStyle">
        <item name="android:padding">@dimen/margin_micro</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

</resources>
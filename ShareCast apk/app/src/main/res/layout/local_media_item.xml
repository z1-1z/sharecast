<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.intelligent.share.local.LocalMediaItemModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/common_card_radius"
        tools:context=".device.DeviceFragment">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/locaL_media_item_height"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/locaL_media_item_label_height"
            android:layout_gravity="bottom"
            android:background="@drawable/local_media_text_label_bg"
            android:gravity="start"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingStart="@dimen/padding_micro"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_micro"
            tools:text="device_001" />

    </androidx.cardview.widget.CardView>
</layout>
